---
interface Props {
  title: string
  content: string
}
const props = Astro.props
---

<main>
  <article>
    <header>
      <h1>{props.title}</h1>
    </header>
    <div class="post-content">
      <Fragment set:html={props.content} />
    </div>
  </article>
</main>

<script>
  console.log('Welcome, browser console!')
</script>

<style>
  .post-content :global(img) {
    width: 100%;
  }
</style>
